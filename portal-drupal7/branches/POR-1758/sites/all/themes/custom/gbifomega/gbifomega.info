name = GBIF Omega
description = The refined theme for the Drupal part of GBIF Portal.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/gbifomega.normalize.css
stylesheets[all][] = css/gbifomega.hacks.css
stylesheets[all][] = css/gbifomega.styles.css
stylesheets[all][] = css/gbifomega.no-query.css

; ========================================
; Scripts
; ========================================
scripts[] = js/gbifomega.behaviors.js

; ========================================
; Regions
; ========================================
; === Zone Header ===
regions[user] = User
